<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/frameLayout_definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/larum_ipsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_favorit"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_favorit" />

    <TextView
        android:id="@+id/frameLayout_fach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_definition"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_jahrgang" />

    <TextView
        android:id="@+id/frameLayout_jahrgang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout_definition"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_definition" />

    <CheckBox
        android:id="@+id/frameLayout_favorit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frameLayout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout_favorit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout_favorit"
        app:layout_constraintTop_toTopOf="@+id/frameLayout_favorit"
        tools:text="@string/title" />

</androidx.constraintlayout.widget.ConstraintLayout>