<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="255dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:contentDescription="@string/a_picture_with_questionmarks"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ideebild" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#00000000"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fba_b_facherunterricht"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4pt"
                android:layout_weight="1"
                android:background="@color/polizeiblau"
                android:text="@string/faecherunterricht"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fba_b_streife"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4pt"
                android:layout_weight="1"
                android:background="@color/polizeiblau"
                android:text="@string/streife"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fba_b_verkehr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4pt"
                android:layout_weight="1"
                android:background="@color/polizeiblau"
                android:text="@string/verkehr"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fba_b_kriminalitaet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4pt"
                android:layout_weight="1"
                android:background="@color/polizeiblau"
                android:text="@string/kriminalitaet"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/fba_b_alleDefinitionen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4pt"
            android:layout_weight="1"
            android:background="@color/polizeiblau"
            android:text="@string/all_definitions"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/fba_tv_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/larum_ipsum"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>